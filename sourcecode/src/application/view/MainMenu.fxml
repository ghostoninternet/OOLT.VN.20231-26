<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.MainScreenController">
   <center>
      <AnchorPane prefHeight="768.0" prefWidth="1024.0" style="-fx-background-color: White;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnMergeSort" layoutX="92.0" layoutY="426.0" mnemonicParsing="false" onAction="#chooseSortingAlgorithm" prefWidth="250.0" style="-fx-background-color: CornflowerBlue;" text="Merge Sort" textFill="WHITE">
               <font>
                  <Font name="Bell MT" size="30.0" />
               </font>
            </Button>
            <Button fx:id="btnCountingSort" layoutX="374.0" layoutY="426.0" mnemonicParsing="false" onAction="#chooseSortingAlgorithm" prefWidth="250.0" style="-fx-background-color: MediumPurple;" text="Counting Sort" textFill="WHITE">
               <font>
                  <Font name="Segoe UI" size="30.0" />
               </font>
            </Button>
            <Button fx:id="btnRadixSort" layoutX="668.0" layoutY="426.0" mnemonicParsing="false" onAction="#chooseSortingAlgorithm" prefWidth="250.0" style="-fx-background-color: MediumOrchid;" text="Radix Sort" textFill="WHITE">
               <font>
                  <Font name="Bell MT" size="30.0" />
               </font>
            </Button>
            <Label layoutX="311.0" layoutY="255.0" text="Choose one sorting algorithm to start" textFill="#693030">
               <font>
                  <Font name="Arial" size="23.0" />
               </font>
            </Label>
            <Label layoutX="257.0" layoutY="43.0" text="SORTING ALGORITHM " textFill="#aaa0b7">
               <font>
                  <Font name="Baskerville Old Face" size="45.0" />
               </font>
            </Label>
            <Label layoutX="295.0" layoutY="107.0" text="APPLICATION" textAlignment="CENTER" textFill="#5f24ac">
               <font>
                  <Font name="Baskerville Old Face" size="62.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#menuAbout" text="About the program" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Quit">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#menuExit" text="Exit " />
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
