<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="793.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
  <center>
       <AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: White;" BorderPane.alignment="CENTER">
                <children>
             
                
                 <Label layoutX="75.0" layoutY="24.0" text="Enter the number of elements in the array to be sorted:" textFill="#693030">
                 <font>
                  <Font name="Arial" size="36.0" />
               </font>
               </Label>
    <TextField fx:id="lengthOfArrayField" layoutX="102.0" layoutY="96.0" prefHeight="30.0" prefWidth="820.0" promptText="Type your array's length here. The length must be a positive integer">
               <font>
                  <Font size="24.0" />
               </font></TextField>
            <Button fx:id="saveArrayLengthBtn" layoutX="350.0" layoutY="189.0" onAction="#saveArrayLength" prefHeight="68.0" prefWidth="325.0" style="-fx-background-color: MediumPurple;" text="Save array length" textFill="WHITE">
               <font>
                  <Font name="Bell MT Bold" size="36.0" />
               </font>
            </Button>

    <Label layoutX="160.0" layoutY="319.0" text="Enter the elements of the array to be sorted:" textFill="#693030">
                 <font>
                  <Font name="Arial" size="36.0" />
               </font>
               </Label>
    <TextField fx:id="valueField" layoutX="103.0" layoutY="397.0" prefHeight="30.0" prefWidth="820.0" promptText="Type your values here. All values must be integer and seperated with space (e.g: 1 2 3 4 ...)">
               <font>
                  <Font size="24.0" />
               </font></TextField>
                <Button fx:id="saveValuesBtn" layoutX="388.0" layoutY="489.0" onAction="#saveValues" prefWidth="250.0" style="-fx-background-color: MediumPurple;" text="Save values" textFill="WHITE">
                 <font>
                  <Font name="Bell MT" size="36.0" />
               </font>
            </Button>
            <Label layoutX="325.0" layoutY="586.0" text="Or create random array" textFill="#693030">
               <font>
                  <Font name="Arial" size="36.0" />
               </font>
            </Label>
            <Button fx:id="createRandomArrayBtn" layoutX="312.0" layoutY="665.0" onAction="#createRandomArray" prefHeight="67.0" prefWidth="400.0" style="-fx-background-color: MediumPurple;" text="Create Random Array" textFill="WHITE">
               <font>
                  <Font name="Bell MT" size="36.0" />
               </font>
            </Button>
   
    </children>
  
      </AnchorPane>
      </center>
</BorderPane>
