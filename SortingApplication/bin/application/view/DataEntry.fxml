<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
  <center>
       <AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: White;" BorderPane.alignment="CENTER">
                <children>
             
                
                 <Label layoutX="121.0" layoutY="56.0" text="Enter the number of elements in the array to be sorted:" textFill="#693030">
                 <font>
                  <Font name="Arial" size="24.0" />
               </font>
               </Label>
    <TextField fx:id="lengthOfArrayField" layoutX="105.0" layoutY="105.0" prefHeight="30.0" prefWidth="600.0" promptText="Type your array's length here. The length must be a positive integer" />
            <Button fx:id="saveArrayLengthBtn" layoutX="275.0" layoutY="172.0" onAction="#saveArrayLength" prefWidth="250.0" style="-fx-background-color: MediumPurple;" text="Save array length" textFill="WHITE">
               <font>
                  <Font name="Bell MT" size="20.0" />
               </font>
            </Button>

    <Label layoutX="165.0" layoutY="257.0" text="Enter the elements of the array to be sorted:" textFill="#693030">
                 <font>
                  <Font name="Arial" size="24.0" />
               </font>
               </Label>
    <TextField fx:id="valueField" layoutX="105.0" layoutY="307.0" prefHeight="30.0" prefWidth="600.0" promptText="Type your values here. All values must be integer and seperated with space (e.g: 1 2 3 4 ...)" />
                <Button fx:id="saveValuesBtn" layoutX="275.0" layoutY="375.0" onAction="#saveValues" prefWidth="250.0" style="-fx-background-color: MediumPurple;" text="Save values" textFill="WHITE">
                 <font>
                  <Font name="Bell MT" size="20.0" />
               </font>
            </Button>
   
    </children>
  
      </AnchorPane>
      </center>
</BorderPane>
