<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="793.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
  <center>
       <AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: White;" BorderPane.alignment="CENTER">
                <children>
             
                
                 <Label layoutX="221.0" layoutY="139.0" text="Enter the number of elements in the array to be sorted:" textFill="#693030">
                 <font>
                  <Font name="Arial" size="24.0" />
               </font>
               </Label>
    <TextField fx:id="lengthOfArrayField" layoutX="213.0" layoutY="222.0" prefHeight="30.0" prefWidth="600.0" promptText="Type your array's length here. The length must be a positive integer" />
            <Button fx:id="saveArrayLengthBtn" layoutX="387.0" layoutY="292.0" onAction="#saveArrayLength" prefWidth="250.0" style="-fx-background-color: MediumPurple;" text="Save array length" textFill="WHITE">
               <font>
                  <Font name="Bell MT" size="20.0" />
               </font>
            </Button>

    <Label layoutX="278.0" layoutY="403.0" text="Enter the elements of the array to be sorted:" textFill="#693030">
                 <font>
                  <Font name="Arial" size="24.0" />
               </font>
               </Label>
    <TextField fx:id="valueField" layoutX="213.0" layoutY="456.0" prefHeight="30.0" prefWidth="600.0" promptText="Type your values here. All values must be integer and seperated with space (e.g: 1 2 3 4 ...)" />
                <Button fx:id="saveValuesBtn" layoutX="388.0" layoutY="528.0" onAction="#saveValues" prefWidth="250.0" style="-fx-background-color: MediumPurple;" text="Save values" textFill="WHITE">
                 <font>
                  <Font name="Bell MT" size="20.0" />
               </font>
            </Button>
            <Label layoutX="387.0" layoutY="617.0" text="Or create random array" textFill="#693030">
               <font>
                  <Font name="Arial" size="24.0" />
               </font>
            </Label>
            <Button fx:id="createRandomArrayBtn" layoutX="388.0" layoutY="664.0" onAction="#createRandomArray" prefWidth="250.0" style="-fx-background-color: MediumPurple;" text="Create Random Array" textFill="WHITE">
               <font>
                  <Font name="Bell MT" size="20.0" />
               </font>
            </Button>
   
    </children>
  
      </AnchorPane>
      </center>
</BorderPane>
